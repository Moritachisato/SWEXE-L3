<% if @tweet.errors.present? %>
<h3>エラーがあります。</h3>
<ul>
<% @tweet.errors.full_messages.each do |msg| %>
<li><%= msg %></li>
<% end %>
</ul>
<% end %>


<div class="container">
        <div class="left">
    　　  <%= link_to 'ホーム', root_path %>
        </div>
        
        
        <div class="contents">
        <p>
        <%= form_for @tweet , url: {action: :create} do |f| %>
        <%= f.label :message, 'ツイート' %>
        <%= f.text_field :message %>
        
        <%= f.submit 'ツイート' %>
        <% end %>
        </p>   
        </div>
   </div>






